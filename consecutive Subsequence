#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_K 100001 

int main() {
    int T;
    if (scanf("%d", &T) != 1) return 1;

    while (T--) {
        int n, k;
        if (scanf("%d %d", &n, &k) != 2) return 1;

        int arr[n]; 
        for (int i = 0; i < n; i++) {
            if (scanf("%d", &arr[i]) != 1) return 1;
        }

        long long modCount[MAX_K]; 
        
        memset(modCount, 0, sizeof(modCount)); 
        
        modCount[0] = 1; 

        long long prefixSum = 0;
        long long result = 0;

        for (int i = 0; i < n; i++) {
            prefixSum += arr[i];

            int mod = (prefixSum % k + k) % k;

            result += modCount[mod];

            modCount[mod]++;
        }

        printf("%lld\n", result);
    }

    return 0;
}
