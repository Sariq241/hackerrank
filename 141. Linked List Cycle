/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    bool hasCycle(ListNode *head) {
        if(head ==NULL || head->next == NULL){
            return false;
        }
        ListNode*prev = head;
        ListNode*tail = head;
        while(tail !=NULL && tail->next != NULL){
            prev = prev->next;
            tail = tail->next->next;
            if(prev == tail){
                return true;
            }
        }
        return false;
        
    }
};
